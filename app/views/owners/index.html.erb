
<h1>Member List of Pet-Owners</h1>
<%= link_to(image_tag("pet_owner.jpg"), root_path) %>
<table id="Owner List">
  <tr>
    <th>Owner</th>
    <th>Country</th>
    <th>Email</th>
    <th>Active</th>
    <th>Address</th>
    <th>City</th>
    <th>Phone</th>
  </tr>

<% @owners.each do |owner| %>
  <tr>
    <td><%= owner.proper_name %></td>
    <td><%= owner.country %></td>
    <td><%= owner.email %></td>
    <td><%= owner.active %></td>
    <td><%= owner.address %></td>
    <td><%= owner.city %></td>
    <td><%= owner.phone %></td>
    <td><%= link_to 'Show', owner %></td>
    <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
    <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add New Owner', new_owner_path %>
